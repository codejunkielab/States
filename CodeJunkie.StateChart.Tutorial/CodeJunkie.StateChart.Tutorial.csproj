<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <CopyAllFiles>true</CopyAllFiles>
    <RootNamespace>CodeJunkie.StateChart.Tutorial</RootNamespace>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <OutputPath>./nupkg</OutputPath>
    <DebugType>portable</DebugType>

    <Title>CodeJunkie.StateChart.Tutorial</Title>

    <PackageId>CodeJunkie.StateChart.Tutorial</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../CodeJunkie.StateChart/CodeJunkie.StateChart.csproj" />
    <ProjectReference Include="../CodeJunkie.StateChart.DiagramGenerator/CodeJunkie.StateChart.DiagramGenerator.csproj" PrivateAssets="all" OutputItemType="analyzer" />

    <PackageReference Include="CodeJunkie.Metadata.Generator" Version="1.0.0" PrivateAssets="all" OutputItemType="analyzer" />
    <PackageReference Include="CodeJunkie.Log" Version="1.0.0" />
  </ItemGroup>

</Project>
